<Window x:Class="Kilony_Browser_Frame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:CefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button x:Name="Return" Click="Return_Click">Return
            </Button>
            <Button x:Name="Next" Click="Next_Click">Next
            </Button>
            <Button x:Name="Refresh" Click="Refresh_Click">
                Refresh
            </Button>
            <Button x:Name="HomePage" Click="HomePage_Click" >Home
            </Button>
            
            <TextBox x:Name="Link" MinWidth="500" BorderBrush="Cyan"/>
            <Button x:Name="Linker" Content="GoToLink" Click="Linker_Click" IsDefault="True">
                
            </Button>
            <Button x:Name="Settings" Margin="15,0,0,0">
                Settings
            </Button>
        </ToolBar>
            <Expander Header="Favorites" DockPanel.Dock="Top">
                <Menu>
                <MenuItem Header="Yandex"/>
                <MenuItem Header="Google"/>
            </Menu>
            </Expander>
        <TabControl x:Name="Tabs">
            <TabItem x:Name="Tab0" Header="Главная страница">
                <CefSharp:ChromiumWebBrowser x:Name="Main" Address="www.yandex.com"/>
            </TabItem>
            <TabItem x:Name="Adder" GotFocus="Adder_GotFocus">
                <TabItem.Header>
                    <TextBlock Text="+"/>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
